{% extends generic_layout %}

{% block head_title %}Admin Biographie{% endblock %}
{% block main_title %}Administration - Biographie{% endblock %}

{% block style_additional %}
	<link rel="stylesheet" type="text/css" href="{{ app.request_stack.currentrequest.basepath }}/js/redactor/css/redactor.css" />
{% endblock %}
{% block script_additional %}
	{% import "index/macro.html.twig" as macro %}
	{{ macro.redactor() }}
{% endblock %}

{% block main_content %}
{% form_theme form 'Form/fields.html.twig' %}
{% import "index/macro.html.twig" as macro %}
{{ form_start(form, {'method' : 'post', 'action' : path('biographyadmin_update', {'id' : entity.id }), 'attr': {'novalidate': 'novalidate'} }) }}
<table class="form_grid">
		<tr>
			<th>{{ form_label(form.title) }}</th>
			<td><div class="errors">{{ form_errors(form.title) }}</div>{{ form_widget(form.title, {'attr':{'class':'form-control'}}) }}</td>
		</tr>
		<tr>
			<th>{{ form_label(form.text) }}</th>
			<td><div class="errors">{{ form_errors(form.text) }}</div>{{ form_widget(form.text) }}</td>
		</tr>
		<tr>
			<th>{{ form_label(form.dayBirth) }}</th>
			<td>{{ form_widget(form.dayBirth, {'attr':{'class':'day form-control'}}) }}/{{ form_widget(form.monthBirth, {'attr':{'class':'month form-control'}}) }}/{{ form_widget(form.yearBirth, {'attr':{'class':'year form-control'}}) }}</td>
		</tr>
		<tr>
			<th>{{ form_label(form.dayDeath) }}</th>
			<td>{{ form_widget(form.dayDeath, {'attr':{'class':'day form-control'}}) }}/{{ form_widget(form.monthDeath, {'attr':{'class':'month form-control'}}) }}/{{ form_widget(form.yearDeath, {'attr':{'class':'year form-control'}}) }}</td>
		</tr>
		<tr>
			<th>{{ form_label(form.photo) }}</th>
			<td><div class="errors">{{ form_errors(form.photo) }}</div>{{ macro.currentImage("photo/biography/", entity.photo) }}{{ form_widget(form.photo) }}</td>
		</tr>
		<tr>
			<th>{{ form_label(form.country) }}</th>
			<td><div class="errors">{{ form_errors(form.country) }}</div>{{ form_widget(form.country, {'attr':{'class':'month form-control'}}) }}</td>
		</tr>
	</table>
	<hr />
	{{ form_widget(form.save, {'icon': 'fa-save'}) }}
	{{ form_rest(form) }}
{{ form_end(form) }}

{% endblock %}